<phyml run.id="multi_marsupials" output.file="multi_marsupials_out" print.json.trace="yes">

  <!-- Tree topology: start with BioNJ and then SPRs -->
  <topology> 
    <instance id="T1" init.tree="bionj" search="spr" optimise.tree="yes"/> 
  </topology>
  

  <!-- Three GTR models, one for each alignment -->
  <ratematrices id="RM1"> 
    <instance id="M1" model="GTR"/> 
    <instance id="M2" model="GTR"/> 
    <instance id="M3" model="GTR"/> 
  </ratematrices>
  

  <!-- FreeRates model of variation of rates across sites -->
  <siterates id="SR1">
    <instance id="R12" init.value="1.0"/>
    <instance id="R13" init.value="1.0"/>
    <instance id="R14" init.value="1.0"/>
    <instance id="R15" init.value="1.0"/>
    <instance id="R11" init.value="0.0"/>
    <weights  id="D11" family="gamma+inv" alpha=".5" optimise.alpha="yes" pinv="0.4" optimise.pinv="yes">
    </weights>
  </siterates>

  <siterates id="SR2">
    <instance id="R21" init.value="1.0"/>
    <instance id="R22" init.value="1.0"/>
    <instance id="R23" init.value="1.0"/>
    <instance id="R24" init.value="1.0"/>
    <weights  id="D21" family="Gamma">
    </weights>
  </siterates>
  

  <!-- Nucleotide frequencies: one vector per gene -->
  <equfreqs id="EF1">
    <instance id="F1" optimise.freqs="yes"/>
    <instance id="F2"/>
  </equfreqs>


  <!-- Branch lengths: one vector per gene -->
  <branchlengths id="BL1">
    <instance id="L1"/>
  </branchlengths>


  <!-- Assemblage of model -->
  <!-- ATP6 gene -->
  <partitionelem id="partition1" file.name="16_ATP6.phy" data.type="nt" interleaved="yes">
    <mixtureelem list=" T1,  T1,  T1,  T1, T1"/>
    <mixtureelem list=" M1,  M1,  M1,  M1, M1"/>
    <mixtureelem list=" F1,  F1,  F1,  F1, F1"/>
    <mixtureelem list="R11, R12, R13, R14, R15"/>
    <mixtureelem list=" L1,  L1,  L1,  L1, L1"/>
  </partitionelem>

  <!-- COX1 gene -->
  <partitionelem id="partition2" file.name="16_COX1.phy" data.type="nt" interleaved="yes">
    <mixtureelem list=" T1,  T1,  T1,  T1"/>
    <mixtureelem list=" M2,  M2,  M2,  M2"/>
    <mixtureelem list=" F2,  F2,  F2,  F2"/>
    <mixtureelem list="R21, R22, R23, R24"/>
    <mixtureelem list=" L1,  L1,  L1,  L1"/>
  </partitionelem>

</phyml>



